{
  // Always use the virtual environment inside the project
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // On Windows, VSCode needs the Scripts folder
  "python.venvPath": "${workspaceFolder}/.venv",

  // Format code on save (optional but recommended)
  "editor.formatOnSave": true,

  // Use Black formatter (auto-installs if you pip install black)
  "python.formatting.provider": "black",

  // Enable linting (pylint or flake8 â€” whichever you prefer)
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // YAML extension settings
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "/*.yaml"
  }
}
